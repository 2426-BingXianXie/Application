# ===========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ===========================================
# This file contains environment variables for production
# SECURITY WARNING: Do not include sensitive data here
# Use secure environment variable injection in production

# ===========================================
# API CONFIGURATION
# ===========================================
# Production API base URL
VITE_API_URL=https://api.permitmanagement.com/api/v1

# API request timeout in milliseconds
VITE_API_TIMEOUT=15000

# Disable API debug logging in production
VITE_API_DEBUG=false

# Disable mock API in production
VITE_USE_MOCK_API=false

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
# Application metadata
VITE_APP_NAME=Permit Management System
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=production
VITE_APP_DESCRIPTION=Official permit management system for municipal building and gas permits

# Company/Organization info
VITE_COMPANY_NAME=City Building Department
VITE_COMPANY_WEBSITE=https://buildingdept.city.gov
VITE_SUPPORT_EMAIL=permits@city.gov
VITE_SUPPORT_PHONE=+1-555-PERMIT

# ===========================================
# PRODUCTION SETTINGS
# ===========================================
# Disable debug mode in production
VITE_ENABLE_DEBUG=false

# Disable development tools
VITE_ENABLE_DEV_TOOLS=false

# Disable React Query devtools
VITE_ENABLE_REACT_QUERY_DEVTOOLS=false

# Enable production error logging
VITE_ENABLE_ERROR_LOGGING=true

# Enable performance monitoring in production
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Disable API timing display
VITE_SHOW_API_TIMING=false

# ===========================================
# FEATURE FLAGS
# ===========================================
# Production features
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_SEARCH=true
VITE_ENABLE_EXPORTS=true
VITE_ENABLE_BULK_OPERATIONS=true
VITE_ENABLE_ADVANCED_FILTERS=true

# Permit types available in production
VITE_ENABLE_BUILDING_PERMITS=true
VITE_ENABLE_GAS_PERMITS=true
VITE_ENABLE_ELECTRICAL_PERMITS=true
VITE_ENABLE_PLUMBING_PERMITS=true

# Administrative features
VITE_ENABLE_USER_MANAGEMENT=true
VITE_ENABLE_AUDIT_LOGS=true
VITE_ENABLE_REPORTING=true

# ===========================================
# UI/UX CONFIGURATION
# ===========================================
# Default theme
VITE_DEFAULT_THEME=light

# Available themes
VITE_AVAILABLE_THEMES=light,dark

# Default language
VITE_DEFAULT_LANGUAGE=en

# Production pagination settings
VITE_ITEMS_PER_PAGE=25
VITE_MAX_ITEMS_PER_PAGE=100

# Date format
VITE_DATE_FORMAT=MM/dd/yyyy
VITE_DATETIME_FORMAT=MM/dd/yyyy HH:mm:ss

# Currency format
VITE_CURRENCY_SYMBOL=$
VITE_CURRENCY_LOCALE=en-US

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
# Production file size limit (15MB)
VITE_MAX_FILE_SIZE=15728640

# Allowed file types for document uploads
VITE_ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# Maximum number of files per upload
VITE_MAX_FILES_PER_UPLOAD=10

# ===========================================
# EXTERNAL SERVICES (PRODUCTION)
# ===========================================
# Production database console (disabled)
VITE_H2_CONSOLE_URL=

# Production API documentation (if public)
VITE_SWAGGER_URL=https://api.permitmanagement.com/docs

# Production health check
VITE_HEALTH_CHECK_URL=https://api.permitmanagement.com/actuator/health

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Production session timeout (30 minutes)
VITE_SESSION_TIMEOUT=30

# Remember me duration in days
VITE_REMEMBER_ME_DURATION=7

# Enable session warning
VITE_ENABLE_SESSION_WARNING=true

# Session warning time (5 minutes before timeout)
VITE_SESSION_WARNING_TIME=5

# Force HTTPS in production
VITE_FORCE_HTTPS=true

# Content Security Policy
VITE_ENABLE_CSP=true

# ===========================================
# PERFORMANCE CONFIGURATION
# ===========================================
# Production cache settings (10 minutes)
VITE_CACHE_DURATION=600000
VITE_ENABLE_QUERY_CACHE=true

# Search debounce
VITE_SEARCH_DEBOUNCE_MS=500

# Enable pagination prefetch
VITE_PREFETCH_NEXT_PAGE=true

# Enable service worker caching
VITE_ENABLE_SERVICE_WORKER=true

# ===========================================
# NOTIFICATION CONFIGURATION
# ===========================================
# Toast notification settings
VITE_TOAST_DURATION=5000
VITE_TOAST_POSITION=top-right

# Enable browser notifications in production
VITE_ENABLE_BROWSER_NOTIFICATIONS=true

# Production refresh intervals (in seconds)
VITE_DASHBOARD_REFRESH_INTERVAL=60
VITE_PERMIT_LIST_REFRESH_INTERVAL=120

# ===========================================
# BUILD CONFIGURATION
# ===========================================
# Disable HMR in production
VITE_HMR=false

# Disable source maps in production for security
VITE_GENERATE_SOURCEMAP=false

# Bundle optimization
VITE_ANALYZE_BUNDLE=false

# Production port (handled by deployment)
VITE_PROD_PORT=443

# ===========================================
# PRODUCTION INTEGRATIONS
# ===========================================
# Enable production integrations
VITE_ENABLE_GIS_INTEGRATION=true
VITE_ENABLE_PAYMENT_INTEGRATION=true
VITE_ENABLE_EMAIL_INTEGRATION=true

# External service URLs (use environment injection)
VITE_GIS_SERVICE_URL=https://gis.city.gov/api
VITE_PAYMENT_SERVICE_URL=https://payments.city.gov/api
VITE_EMAIL_SERVICE_URL=https://mail.city.gov/api

# ===========================================
# BRANDING & CUSTOMIZATION
# ===========================================
# Production branding
VITE_LOGO_URL=https://cdn.permitmanagement.com/logo.png
VITE_FAVICON_URL=https://cdn.permitmanagement.com/favicon.ico
VITE_PRIMARY_COLOR=#1f3a8c
VITE_SECONDARY_COLOR=#374151

# Custom CSS for production theming
VITE_CUSTOM_CSS_URL=https://cdn.permitmanagement.com/custom.css

# ===========================================
# MONITORING & ANALYTICS
# ===========================================
# Enable production analytics
VITE_ENABLE_ANALYTICS=true

# Analytics service (configure with actual service)
VITE_ANALYTICS_ID=GA-XXXXXXXXX

# Error tracking in production
VITE_ENABLE_ERROR_TRACKING=true

# Error tracking service
VITE_ERROR_TRACKING_DSN=https://your-dsn@sentry.io/project-id

# Performance monitoring
VITE_ENABLE_PERFORMANCE_TRACKING=true

# User behavior tracking (with privacy compliance)
VITE_ENABLE_USER_TRACKING=false

# ===========================================
# COMPLIANCE & PRIVACY
# ===========================================
# Privacy policy and terms
VITE_PRIVACY_POLICY_URL=https://permitmanagement.com/privacy
VITE_TERMS_OF_SERVICE_URL=https://permitmanagement.com/terms
VITE_ACCESSIBILITY_URL=https://permitmanagement.com/accessibility

# Cookie consent
VITE_ENABLE_COOKIE_CONSENT=true
VITE_COOKIE_POLICY_URL=https://permitmanagement.com/cookies

# Data retention policies
VITE_DATA_RETENTION_DAYS=2555

# ===========================================
# BACKUP & DISASTER RECOVERY
# ===========================================
# Backup API endpoints
VITE_BACKUP_API_URL=https://backup.permitmanagement.com/api/v1

# Disaster recovery site
VITE_DR_SITE_URL=https://dr.permitmanagement.com

# ===========================================
# PRODUCTION OVERRIDES
# ===========================================
# Production security settings
VITE_STRICT_TRANSPORT_SECURITY=true
VITE_CONTENT_TYPE_NOSNIFF=true
VITE_X_FRAME_OPTIONS=DENY

# Rate limiting
VITE_ENABLE_RATE_LIMITING=true
VITE_MAX_REQUESTS_PER_MINUTE=100

# Production logging
VITE_LOG_LEVEL=warn
VITE_ENABLE_CONSOLE_LOGS=false

# ===========================================
# MAINTENANCE & UPDATES
# ===========================================
# Maintenance mode
VITE_MAINTENANCE_MODE=false
VITE_MAINTENANCE_MESSAGE=System under maintenance. Please check back later.

# Update notifications
VITE_ENABLE_UPDATE_NOTIFICATIONS=true
VITE_UPDATE_CHECK_INTERVAL=86400

# Feature announcement
VITE_SHOW_FEATURE_ANNOUNCEMENTS=true

# ===========================================
# DEPLOYMENT INFORMATION
# ===========================================
# Build information (typically injected during CI/CD)
VITE_BUILD_NUMBER=
VITE_BUILD_DATE=
VITE_GIT_COMMIT=
VITE_DEPLOYMENT_ENV=production

# Health check endpoints
VITE_HEALTH_CHECK_ENABLED=true
VITE_STATUS_PAGE_URL=https://status.permitmanagement.com