# ===========================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# ===========================================
# This file contains environment variables for development
# DO NOT commit sensitive data like API keys or passwords

# ===========================================
# API CONFIGURATION
# ===========================================
# Backend API base URL
VITE_API_URL=http://localhost:8080/api/v1

# API request timeout in milliseconds
VITE_API_TIMEOUT=10000

# Enable API request/response logging
VITE_API_DEBUG=true

# Mock API responses (useful for frontend development without backend)
VITE_USE_MOCK_API=false

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
# Application metadata
VITE_APP_NAME=Permit Management System
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development
VITE_APP_DESCRIPTION=Multi-type permit management system for building and gas permits

# Company/Organization info
VITE_COMPANY_NAME=City Building Department
VITE_COMPANY_WEBSITE=https://city.example.com
VITE_SUPPORT_EMAIL=support@city.example.com
VITE_SUPPORT_PHONE=+1-555-0123

# ===========================================
# DEVELOPMENT TOOLS & DEBUGGING
# ===========================================
# Enable debug mode
VITE_ENABLE_DEBUG=true

# Enable development tools
VITE_ENABLE_DEV_TOOLS=true

# Enable React Query devtools
VITE_ENABLE_REACT_QUERY_DEVTOOLS=true

# Enable detailed error logging
VITE_ENABLE_ERROR_LOGGING=true

# Enable performance monitoring in development
VITE_ENABLE_PERFORMANCE_MONITORING=false

# Show API response times in console
VITE_SHOW_API_TIMING=true

# ===========================================
# FEATURE FLAGS
# ===========================================
# Enable/disable features during development
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_SEARCH=true
VITE_ENABLE_EXPORTS=true
VITE_ENABLE_BULK_OPERATIONS=true
VITE_ENABLE_ADVANCED_FILTERS=true

# Permit type features
VITE_ENABLE_BUILDING_PERMITS=true
VITE_ENABLE_GAS_PERMITS=true
VITE_ENABLE_ELECTRICAL_PERMITS=false
VITE_ENABLE_PLUMBING_PERMITS=false

# Administrative features
VITE_ENABLE_USER_MANAGEMENT=false
VITE_ENABLE_AUDIT_LOGS=true
VITE_ENABLE_REPORTING=true

# ===========================================
# UI/UX CONFIGURATION
# ===========================================
# Default theme
VITE_DEFAULT_THEME=light

# Available themes
VITE_AVAILABLE_THEMES=light,dark

# Default language
VITE_DEFAULT_LANGUAGE=en

# Pagination settings
VITE_ITEMS_PER_PAGE=20
VITE_MAX_ITEMS_PER_PAGE=100

# Date format
VITE_DATE_FORMAT=MM/dd/yyyy
VITE_DATETIME_FORMAT=MM/dd/yyyy HH:mm:ss

# Currency format
VITE_CURRENCY_SYMBOL=$
VITE_CURRENCY_LOCALE=en-US

# ===========================================
# FILE UPLOAD CONFIGURATION
# ===========================================
# Maximum file size in bytes (10MB)
VITE_MAX_FILE_SIZE=10485760

# Allowed file types for document uploads
VITE_ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png,gif

# Maximum number of files per upload
VITE_MAX_FILES_PER_UPLOAD=5

# ===========================================
# EXTERNAL SERVICES (DEVELOPMENT)
# ===========================================
# Database console (H2 for development)
VITE_H2_CONSOLE_URL=http://localhost:8080/h2-console

# Swagger API documentation
VITE_SWAGGER_URL=http://localhost:8080/swagger-ui.html

# Spring Boot Actuator endpoints
VITE_ACTUATOR_URL=http://localhost:8080/actuator

# ===========================================
# SECURITY CONFIGURATION
# ===========================================
# Session timeout in minutes
VITE_SESSION_TIMEOUT=60

# Remember me duration in days
VITE_REMEMBER_ME_DURATION=30

# Enable session warning before timeout
VITE_ENABLE_SESSION_WARNING=true

# Session warning time in minutes before timeout
VITE_SESSION_WARNING_TIME=5

# ===========================================
# PERFORMANCE CONFIGURATION
# ===========================================
# Cache settings
VITE_CACHE_DURATION=300000
VITE_ENABLE_QUERY_CACHE=true

# Debounce settings for search
VITE_SEARCH_DEBOUNCE_MS=300

# Pagination prefetch
VITE_PREFETCH_NEXT_PAGE=true

# ===========================================
# NOTIFICATION CONFIGURATION
# ===========================================
# Toast notification settings
VITE_TOAST_DURATION=4000
VITE_TOAST_POSITION=top-right

# Enable browser notifications
VITE_ENABLE_BROWSER_NOTIFICATIONS=false

# Auto-refresh intervals (in seconds)
VITE_DASHBOARD_REFRESH_INTERVAL=30
VITE_PERMIT_LIST_REFRESH_INTERVAL=60

# ===========================================
# DEVELOPMENT UTILITIES
# ===========================================
# Enable hot module replacement
VITE_HMR=true

# Enable source maps
VITE_GENERATE_SOURCEMAP=true

# Bundle analyzer
VITE_ANALYZE_BUNDLE=false

# Development server port (handled by Vite, but useful for documentation)
VITE_DEV_SERVER_PORT=3000

# ===========================================
# TESTING CONFIGURATION
# ===========================================
# Enable test mode features
VITE_ENABLE_TEST_MODE=false

# Test data generation
VITE_GENERATE_TEST_DATA=false

# Mock user for testing
VITE_TEST_USER_EMAIL=test@example.com
VITE_TEST_USER_NAME=Test User

# ===========================================
# INTEGRATION SETTINGS
# ===========================================
# Enable integration with external systems
VITE_ENABLE_GIS_INTEGRATION=false
VITE_ENABLE_PAYMENT_INTEGRATION=false
VITE_ENABLE_EMAIL_INTEGRATION=false

# Webhook endpoints (for development testing)
VITE_WEBHOOK_URL=http://localhost:3001/webhooks

# ===========================================
# BRANDING & CUSTOMIZATION
# ===========================================
# Logo and branding
VITE_LOGO_URL=/logo.png
VITE_FAVICON_URL=/favicon.ico
VITE_PRIMARY_COLOR=#3b82f6
VITE_SECONDARY_COLOR=#6b7280

# Custom CSS
VITE_CUSTOM_CSS_URL=

# ===========================================
# MONITORING & ANALYTICS
# ===========================================
# Enable analytics in development
VITE_ENABLE_ANALYTICS=false

# Error tracking
VITE_ENABLE_ERROR_TRACKING=false

# Performance monitoring
VITE_ENABLE_PERFORMANCE_TRACKING=false

# User behavior tracking
VITE_ENABLE_USER_TRACKING=false

# ===========================================
# DEVELOPMENT OVERRIDES
# ===========================================
# Override production settings for development
VITE_FORCE_HTTPS=false
VITE_BYPASS_AUTH=false
VITE_MOCK_EXTERNAL_APIS=true

# Development-specific feature toggles
VITE_DEV_SHOW_CONSOLE_LOGS=true
VITE_DEV_SHOW_RENDER_TIMES=false
VITE_DEV_ENABLE_EXPERIMENTAL_FEATURES=true