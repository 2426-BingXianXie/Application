# Development Environment Configuration

# API Configuration
VITE_API_BASE_URL=http://localhost:8080/api/v1
VITE_API_TIMEOUT=10000

# Application Configuration
VITE_APP_NAME="Permit Management System"
VITE_APP_VERSION="1.0.0"
VITE_APP_DESCRIPTION="Municipal permit management and tracking system"

# Environment
VITE_APP_ENV=development
VITE_DEBUG_MODE=true

# Features
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false
VITE_ENABLE_AUTO_SAVE=true
VITE_ENABLE_DARK_MODE=true

# File Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES="pdf,doc,docx,jpg,jpeg,png,gif,dwg"
VITE_MAX_FILES_PER_UPLOAD=5

# Map Configuration (if using maps)
VITE_MAP_API_KEY=""
VITE_MAP_DEFAULT_CENTER_LAT=42.3601
VITE_MAP_DEFAULT_CENTER_LNG=-71.0589
VITE_MAP_DEFAULT_ZOOM=12

# Notification Configuration
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_NOTIFICATION_SOUND=true
VITE_TOAST_DURATION=4000

# Authentication Configuration
VITE_TOKEN_STORAGE_KEY="permit_auth_token"
VITE_REFRESH_TOKEN_KEY="permit_refresh_token"
VITE_SESSION_TIMEOUT=3600000

# Performance Configuration
VITE_ENABLE_SERVICE_WORKER=false
VITE_CACHE_DURATION=300000
VITE_DEBOUNCE_DELAY=300

# Development Tools
VITE_SHOW_DEV_TOOLS=true
VITE_LOG_LEVEL=debug
VITE_SHOW_QUERY_DEVTOOLS=true

# External Services
VITE_SUPPORT_EMAIL="support@municipality.gov"
VITE_SUPPORT_PHONE="+1-555-123-4567"
VITE_MUNICIPALITY_WEBSITE="https://municipality.gov"

# Payment Processing (if applicable)
VITE_PAYMENT_PROCESSOR=""
VITE_PAYMENT_PUBLIC_KEY=""

# Social Media / External Links
VITE_FACEBOOK_URL=""
VITE_TWITTER_URL=""
VITE_LINKEDIN_URL=""

# Monitoring and Analytics
VITE_SENTRY_DSN=""
VITE_GOOGLE_ANALYTICS_ID=""
VITE_HOTJAR_ID=""

# Feature Flags
VITE_FEATURE_MULTI_LANGUAGE=false
VITE_FEATURE_BULK_OPERATIONS=true
VITE_FEATURE_ADVANCED_SEARCH=true
VITE_FEATURE_EXPORT_REPORTS=true
VITE_FEATURE_CALENDAR_INTEGRATION=false

# Security
VITE_ENABLE_CSP=false
VITE_ALLOWED_HOSTS="localhost,127.0.0.1"

# Development Database Seeding
VITE_SEED_SAMPLE_DATA=true
VITE_MOCK_API_RESPONSES=false

# Accessibility
VITE_ENABLE_ACCESSIBILITY_CHECKER=true
VITE_HIGH_CONTRAST_MODE=false

# Localization
VITE_DEFAULT_LANGUAGE="en"
VITE_SUPPORTED_LANGUAGES="en"
VITE_DEFAULT_TIMEZONE="America/New_York"
VITE_DEFAULT_DATE_FORMAT="MM/dd/yyyy"

# Build Configuration
VITE_GENERATE_SOURCEMAP=true
VITE_MINIFY_CSS=false
VITE_MINIFY_JS=false

# Development Server
VITE_HOST=localhost
VITE_PORT=3000
VITE_OPEN_BROWSER=true

# CORS Configuration
VITE_CORS_ORIGINS="http://localhost:8080"

# WebSocket Configuration (if using real-time features)
VITE_WS_URL="ws://localhost:8080/ws"
VITE_WS_RECONNECT_INTERVAL=5000
VITE_WS_MAX_RECONNECT_ATTEMPTS=5